<div class="panel panel-default" id="expander">
    <div class="panel-body">
        <div class="col-md-8">
        <%= image_tag("samplepic.png", :alt => "Your scenario", id: 'scenario-1') %>
        </div>     
        <div id="questionanswer" class="col-md-4">
          <%= @question.text %> <br> <br>
          <% @answers.each_with_index do |answer, i| %>
            <li>
              <%= button_to "#{answer.text}", next_scene_path(scene_id: answer.scene_id), remote: true, class: "btn btn-default scene-link", id: "#{@question.scene_id}_#{answer.scene_id}", 
                style: 'white-space: normal;' %>
              <br> <br>
            </li>
          <% end %>
        </div>
    </div>
</div>